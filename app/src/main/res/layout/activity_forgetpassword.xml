<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Forgetpassword"
    android:background="@drawable/forgotbackground">

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="80dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_lock"
        app:tint="@color/black" />

    <TextView
        android:id="@+id/changepass"
        android:layout_width="243dp"
        android:layout_height="67dp"
        android:layout_marginTop="32dp"
        android:gravity="center"
        android:text="Forgot Password??"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView8" />

    <EditText
        android:id="@+id/frgtpass"
        android:layout_width="308dp"
        android:layout_height="59dp"
        android:layout_marginTop="28dp"
        android:drawableLeft="@drawable/ic_email"
        android:ems="10"
        android:hint="Enter email to reset password"
        android:inputType="textEmailAddress"
        android:minHeight="48dp"
        android:paddingStart="10dp"
        android:paddingLeft="5dp"
        android:paddingEnd="5dp"
        android:paddingRight="10dp"
        android:textAlignment="center"
        android:background="@drawable/edittext_round"
        android:textColorHint="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/changepass"
        tools:ignore="SpeakableTextPresentCheck" />

    <Button
        android:id="@+id/resetbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="Reset Password"
        android:background="@drawable/bg_round"
        app:layout_constraintEnd_toEndOf="@+id/frgtpass"
        app:layout_constraintStart_toStartOf="@+id/frgtpass"
        app:layout_constraintTop_toBottomOf="@+id/frgtpass" />

    <TextView
        android:id="@+id/btnback"
        android:layout_width="83dp"
        android:layout_height="35dp"
        android:layout_marginTop="88dp"
        android:text="Back "
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/resetbtn"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintStart_toStartOf="@+id/resetbtn"
        app:layout_constraintTop_toBottomOf="@+id/resetbtn" />

</androidx.constraintlayout.widget.ConstraintLayout>